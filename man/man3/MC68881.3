CONST signalingNotANumber = 1;
CONST operandError = 2;
CONST overflow = 3;
CONST underflow = 4;
CONST divideByZero = 5;
CONST inexactOperation = 6;
CONST inexactDecimalInput = 7;
.sp 0.3
