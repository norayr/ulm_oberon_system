#!/bin/sh

BASEDIR=/usr/local/oberon

cd $BASEDIR/var/pons || exit 1

nohup $BASEDIR/bin/pons -b 127.0.0.1 9880 pdb >pons.LOG 2>&1 &

# wait for pons to start and attempt to create pub/cdb in case
# it does not exist yet

sleep 2
. $BASEDIR/rc
echo "mkdir pub/cdb" | $BASEDIR/bin/nsh >/dev/null 2>&1
