MODULE Oberon32iAnalyzer;

   IMPORT CompilerObjects, Iterators, Oberon32i, RelatedEvents, Scopes,
      Sym := OberonSymbols, Sym32i := Oberon32iSymbols;

   PROCEDURE Process(module: Sym.Ident; errors: RelatedEvents.Object);

      PROCEDURE ProcessScope(scope: Scopes.Scope);
	 VAR
	    it: Iterators.Iterator;
	    ident: Sym.Ident;
	    size: Oberon32i.Size;
	    type: Sym.Type;
	    at: Sym32i.Attribute;
      BEGIN
	 Scopes.GetIterator(scope, it);
	 WHILE Iterators.Get(it, ident) DO
	    ASSERT(ident.type # NIL);
	    type := ident.type;
	    IF ident.class = Sym.constC THEN
	       IF Sym32i.CheckConst(module, ident.constexpr, errors) THEN
		  CompilerObjects.GetAttachment(ident.constexpr, at);
		  IF at = NIL THEN
		     type := NIL;
		  ELSE
		     type := at.type;
		  END;
	       ELSE
		  type := NIL; Sym32i.SetTypeToNIL(module, ident.constexpr);
	       END;
	    ELSIF ident.class = Sym.procedureC THEN
	       IF ident.scope # NIL THEN
		  ProcessScope(ident.scope);
	       END;
	       Sym32i.Fold(module, ident.body, errors);
	    END;
	    IF type # NIL THEN
	       size := Sym32i.GetSize(module, type, errors);
	    END;
	 END;
      END ProcessScope;

   BEGIN (* Process *)
      ProcessScope(module.scope);
      Sym32i.Fold(module, module.body, errors);
   END Process;

END Oberon32iAnalyzer.
